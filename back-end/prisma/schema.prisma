generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  points     Int      @default(0)
  referredBy Int?     // id do usu√°rio que indicou, nullable
  createdAt  DateTime @default(now())
}
